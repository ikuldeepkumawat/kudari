{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "KudariLang",
  "scopeName": "source.kudarilang",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#program-markers"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#variables"
    },
    {
      "include": "#conditionals"
    },
    {
      "include": "#loops"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.kudarilang",
          "begin": "//",
          "end": "$",
          "captures": {
            "0": {
              "name": "punctuation.definition.comment.kudarilang"
            }
          }
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.kudarilang",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.kudarilang",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.kudarilang",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "program-markers": {
      "patterns": [
        {
          "name": "keyword.control.program.start.kudarilang",
          "match": "\\b(kudari shuru karo)\\b",
          "captures": {
            "1": {
              "name": "keyword.control.program.kudarilang"
            }
          }
        },
        {
          "name": "keyword.control.program.end.kudarilang",
          "match": "\\b(kudari khatam karo)\\b",
          "captures": {
            "1": {
              "name": "keyword.control.program.kudarilang"
            }
          }
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.declaration.variable.kudarilang",
          "match": "\\b(ginti)\\b"
        },
        {
          "name": "keyword.operator.assignment.kudarilang",
          "match": "\\b(kar do)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.kudarilang",
          "match": "\\b(add karo|kam karo|guna karo|bhag karo)\\b"
        },
        {
          "name": "keyword.operator.comparison.kudarilang",
          "match": "\\b(barabar hai|nahi barabar|zyada hai|kam hai|zyada ya barabar|kam ya barabar)\\b"
        },
        {
          "name": "keyword.operator.logical.kudarilang",
          "match": "\\b(aur|ya|nahi)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "support.function.builtin.kudarilang",
          "match": "\\b(bolo)\\b"
        }
      ]
    },
    "conditionals": {
      "patterns": [
        {
          "name": "keyword.control.conditional.kudarilang",
          "match": "\\b(agar|warna agar|warna|to)\\b"
        }
      ]
    },
    "loops": {
      "patterns": [
        {
          "name": "keyword.control.loop.kudarilang",
          "match": "\\b(jab tak|to)\\b"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.kudarilang",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}